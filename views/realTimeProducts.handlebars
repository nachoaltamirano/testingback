<div>
    <div class="form-container">
        <form class="form">
            <h2>Agregar producto</h2>
            <label for="nombre" >Nombre:</label>
            <input type="text" id="nombre" required>
            <label for="" >Descripción:</label>
            <input type="text" id="descripcion" required>
            <label for="">Precio:</label>
            <input type="number" id="precio" required>
            <label for="">Código:</label>
            <input type="text" id="codigo" required>
            <label for="">Link imagen:</label>
            <input type="text" id="thumbnail" required placeholder="-">
            <label for="">Stock:</label>
            <input type="number" id="stock" required>
            <label for="">categoría:</label>
            <input type="text" id="categoria" required>
            <button type="submit" id="btnadd">Agregar</button>
        </form>
        <form class="form">
            <h2>Eliminar producto</h2>
            <label for="">ID del producto que a eliminar:</label>
            <input type="text" id="id" required>
            <button type="submit" id="btndelete">Eliminar</button>
        </formclas>
    </div>
    
    <h1 class="title">Lista productos:</h1>

    {{#each productos}}
        <div class="products" id="productos">
            <h3><span>Nombre: </span>{{this.title}}</h3>
            <h5 ><span>Id: </span>{{this._id}}</h5>
            <h5><span>Descripción: </span>{{this.description}}</h5>
            <h5><span>Precio: </span>${{this.price}}</h5>
            <h5><span>Imagen: </span>{{this.thumbnail}}</h5>
            <h5><span>Stock: </span>{{this.stock}}</h5>
            <h5><span>Código: </span>{{this.code}}</h5>
        </div>
    {{/each}}
</div>

